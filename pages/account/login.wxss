.login__header {
    height: 320rpx;
    background-color: #5171f0;
    position: relative;
    margin-bottom: 120rpx;
}
.login__header__avatar {
    width: 160rpx;
    height: 160rpx;
    overflow: hidden;
    border-radius: 50%;
    position: absolute;
    left: 50%;
    bottom: -80rpx;
    transform: translateX(-50%);
    background-color: rgba(255,255,255,0.2);
}
.login__header__avatar image {
    width: 100%;
    height: 100%;
}

.login__form {
    padding: 0 30rpx;
}
.login__form input {
    border-bottom: 1rpx solid #f0f0f0;
    margin-bottom: 30rpx;
}

.scan-code {
    padding: 50rpx 30rpx 30rpx;
}
