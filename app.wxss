.flex {
    display: flex;
    align-items: center;
}
.flex-between {
	-webkit-box-pack: justify;
    -ms-flex-pack: justify;
    justify-content: space-between;
}
.flex-between__left text {
	margin-right: 15rpx;
}
.flex-between__left text:last-child {
	margin-right: 0;
}
.flex-between__right text {
	margin-left: 15rpx;
}
.flex-between__right text:last-child {
	margin-left: 0;
}
.flex-between__left text[disabled],
.flex-between__right text[disabled] {
	opacity: 0.5;
}



/* infinite__state */
.infinite__state { 
	text-align: center; 
	color: #808080;
	padding: 15rpx 0 20rpx;
	font-size: 26rpx;
}




/** item **/
.topic {
	background-color: #fff;
	margin-bottom: 30rpx;
	overflow: hidden;
}
.topic navigator {
	padding: 30rpx;
}
.topic:last-child {
	margin-bottom: 0;
}
.topic .topic__author {
	font-size: 28rpx;
	margin-bottom: 15rpx;
}
.topic .topic__reply__at {
	font-size: 24rpx;
	opacity: 0.5;
}
.topic .topic__info {
	margin-bottom: 30rpx;
}

.topic .topic__content > text {
	display: block;
}
.topic .topic__title {
	font-size: 32rpx;
	margin-bottom: 20rpx;
	overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.topic .topic__summary {
	opacity: 0.5;
	font-size: 28rpx;
	line-height: 1.5;
	overflow: hidden;
    word-break: break-all;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.topic .topic__meta {
	font-size: 26rpx;
	opacity: 0.5;
	margin-top: 30rpx;
	padding-top: 20rpx;
	border-top: 1px solid #b3b3b3;
}

/* recent-item */
.recent-item {
	padding: 20rpx;
	background-color: #fff;
	margin-bottom: 30rpx;
}
.recent-item__title {
	font-size: 32rpx;
    margin-bottom: 20rpx;
    overflow: hidden;
    word-break: break-all;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.recent-item__meta {
	font-size: 26rpx;
    color: #bdbdbd;
    max-height: 99999px;
}