/**---------------------------------
 * grids
 -----------------------------------*/
.grids {
	display: flex;
}
.grid {
	flex: 1;
	text-align: center;
	border-right: 1px solid rgba(0,0,0,0.1);
}
.grid:last-child {
	border-right: none;
}
.grid__icon {
	width: 60rpx;
	height: 60rpx;
	}
.grid__name {
	font-size: 26rpx;
}


/**---------------------------------
* panel
-----------------------------------*/
.panel {
	background-color: #fff;
	margin: 30rpx 0 ;
	overflow: hidden;
	clear: both;
}
.panel--padding {
	padding: 30rpx 0; 
}


/**---------------------------------
* status
-----------------------------------*/
.page__status {
	text-align: center;
	height: 100vh;
}
.page__status__image {
	width: 240rpx;
	height: 240rpx; 
}
.page__status__image image {
	width: 100%;
	height: 100%;
}


/**---------------------------------
* list-menu
-----------------------------------*/
.list-menu {
	display: flex;
	align-items: center;
	border-bottom: 1rpx solid rgba(0,0,0,0.1);
}
.list-menu--disabled {
	opacity: 0.5;
}
.list-menu:last-child {
	border-bottom: none;
}
.list-menu__header {
	padding: 0 10rpx 0 20rpx;
}
.list-menu__header image {
	width: 48rpx;
	height: 48rpx;
}
.list-menu__body {
	flex: 1;
	padding: 20rpx;
	min-height: 70rpx;
}
.list-menu__title {
	position: relative;
	top: 16rpx;
}
.list-menu__brief {
	margin-top: 5rpx;
	font-size: 24rpx;
	opacity: 0.5;
}
.list-menu__extra {
	font-size: 26rpx;
	opacity: 0.5;
}
.list-menu__footer {
    padding: 0 20rpx;
	font-size: 24rpx;
	opacity: 0.5;
}
.list-menu__footer image {
	width: 36rpx;
	height: 36rpx;
}

.list-menu--more .list-menu__title {
	top: 0;
}


/**--------------------------
* text__content
----------------------------*/
.text__content {
    line-height: 1.6;
    padding: 30rpx;
    font-size: 32rpx;
    overflow: hidden;
}
.text__content text { 
    display: block; 
    margin-bottom: 15rpx;
}

.text__content .h3 {
    font-size: 36rpx;
    margin-top: 30rpx;
}